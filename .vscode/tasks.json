{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Mod",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Deploy Mod",
      "type": "shell",
      "command": "cp",
      "args": ["${workspaceFolder}/bin/Debug/net46/.dll", "/BepInEx/plugins/"],
      "problemMatcher": []
    },
    {
      "label": "Run Game",
      "type": "shell",
      "command": "/",
      "args": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
